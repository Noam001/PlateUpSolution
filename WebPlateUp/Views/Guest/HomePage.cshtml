@using Models;
@model List<Review>
@{
    ViewData["Title"] = "HomePage";
    Layout = "~/Views/Shared/MasterPage.cshtml";
}
<link href="~/stylesheet/homepage.css" rel="stylesheet" />
<main class="main">
    <h1 class="PlateUp">PlateUp</h1>
    <p class="description">Lorem ipsum dolor sit amet, consectetur adipi- <br>scing elit, sed do iusmod tempor incididunt ut <br> labore et dolore magna.</p>
    <div class="ReviewBlock">
        <h2 class="Reviews">Reviews</h2>
@*         <input asp-for="@Model.ClientId" id="id" type="hidden" value="@ViewBag.ClientId" />
 *@        <form asp-controller="Client" asp-action="LeaveAReview" class="reviewBox" method="post">
            <div class="rating-selector">
                <div class="stars-input">
                    <input type="radio" id="star1" name="ReviewRating" value="1">
                    <label for="star1">★</label>

                    <input type="radio" id="star2" name="ReviewRating" value="2">
                    <label for="star2">★</label>

                    <input type="radio" id="star3" name="ReviewRating" value="3">
                    <label for="star3">★</label>

                    <input type="radio" id="star4" name="ReviewRating" value="4">
                    <label for="star4">★</label>

                    <input type="radio" id="star5" name="ReviewRating" value="5">
                    <label for="star5">★</label>
                </div>
            </div>
            <textarea name="ReviewComment" id="review" placeholder="Write a Review..." class="reviewInput" rows="2"></textarea>
            <button class="Send" type="submit">Send</button>
        </form>
        <div class="allReviews">
            @foreach (Review review in Model)
            {
                <div class="review-card">
                    <div class="review-stars">
                        @{
                            for (int i = 0; i < review.ReviewRating; i++)
                            {
                                <span>★</span>
                            }
                            for (int i = review.ReviewRating; i < 5; i++)
                            {
                                <span style="color: #ccc;">★</span>
                            }
                        }
                    </div>
                    <p class="review-text">
                        @review.ReviewComment
                    </p>
                    <div class="review-footer">
                        <span class="review-client">@review.ClientId</span>
                        <span class="review-date">@review.ReviewDate</span>
                    </div>
                </div>
            }
        </div>
    </div>
</main>
