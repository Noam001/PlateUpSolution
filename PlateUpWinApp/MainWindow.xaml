<Window x:Class="PlateUpWinApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlateUpWinApp"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="450" Width="900"
        ResizeMode="NoResize"
        WindowStyle="None" MouseDown="Window_MouseDown">
    <!--<StackPanel Orientation="Horizontal" Width="800">
        <StackPanel Orientation="Vertical" Width="180" Background="#FF150B48">
            
        </StackPanel>
        <StackPanel Orientation="Horizontal" Width="600">

        </StackPanel>
    </StackPanel>-->
    <Grid Background="#0B1026">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="750"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="370"/>
        </Grid.RowDefinitions>

        <!-- Top Bar -->
        <!-- Top Bar -->
        <StackPanel Orientation="Horizontal"
                    Grid.Row="0"
                    Grid.ColumnSpan="2"
                    Background="#12194A">

            <Canvas>
                <Image Source="/Images/Logo2.png" Width="90" Margin="15,-5,0,0"/>

                <Label Content="PlateUp | Admin"
                       Foreground="White"
                       FontSize="13"
                       FontWeight="SemiBold"
                       Canvas.Left="412"
                       Canvas.Top="29"/>

                <!-- Modern Logout Button -->
                <Button x:Name="btnLogout"
                        Content="Logout"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Foreground="White"
                        Background="#2E3B72"
                        BorderThickness="0"
                        Padding="7,6"
                        Width="78"
                        Canvas.Left="802"
                        Canvas.Top="26"
                        Cursor="Hand">
                </Button>
            </Canvas>
        </StackPanel>

        <!-- Sidebar -->
        <StackPanel Grid.Row="1"
                    Grid.Column="0"
                    Background="#0E1233">

            <Label x:Name="adminName"
                   Content="Admin Name"
                   Foreground="#FFFFFF"
                   FontWeight="SemiBold"
                   Margin="30,15,0,0"/>

            <StackPanel Margin="30,15,0,0">
                <TextBlock>
                    <Hyperlink x:Name="Reports"
                               Foreground="#B0B0B0"
                               TextDecorations="None">
                        View Reports
                    </Hyperlink>
                </TextBlock>

                <TextBlock Margin="0,15,0,0">
                    <Hyperlink x:Name="Menu"
                               Foreground="#B0B0B0"
                               TextDecorations="None"
                               Click="Menu_Click">
                        Manage Menu
                    </Hyperlink>
                </TextBlock>

                <TextBlock Margin="0,15,0,0">
                    <Hyperlink x:Name="FoodTypes"
                               Foreground="#B0B0B0"
                               TextDecorations="None"
                               Click="FoodTypes_Click">
                        Manage FoodTypes
                    </Hyperlink>
                </TextBlock>

                <TextBlock Margin="0,15,0,0">
                    <Hyperlink x:Name="Orders"
                               Foreground="#B0B0B0"
                               TextDecorations="None"
                               Click="Orders_Click">
                        Manage Orders
                    </Hyperlink>
                </TextBlock>

                <TextBlock Margin="0,15,0,0">
                    <Hyperlink x:Name="Cities"
                               Foreground="#B0B0B0"
                               TextDecorations="None"
                               Click="FoodTypes_Click">
                        Manage Cities
                    </Hyperlink>
                </TextBlock>

                <TextBlock Margin="0,15,0,0">
                    <Hyperlink x:Name="Reviews"
                               Foreground="#B0B0B0"
                               TextDecorations="None"
                               Click="FoodTypes_Click">
                        Manage Reviews
                    </Hyperlink>
                </TextBlock>

                <TextBlock Margin="0,15,0,0">
                    <Hyperlink x:Name="Login"
                               Foreground="#B0B0B0"
                               TextDecorations="None"
                               Click="Login_Click">
                        Login
                    </Hyperlink>
                </TextBlock>
            </StackPanel>
        </StackPanel>

        <!-- Content -->
        <Frame x:Name="FrameContent"
               Grid.Row="1"
               Grid.Column="1"
               Background="#171F4F"
               NavigationUIVisibility="Hidden"
               Navigated="FrameContent_Navigated"/>
    </Grid>
</Window>
