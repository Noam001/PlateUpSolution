<UserControl x:Class="PlateUpWinApp.Frames.ManageReviewsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PlateUpWpf.Frames"
             mc:Ignorable="d" 
             d:DesignHeight="540" d:DesignWidth="930">
    <UserControl.Resources>
        <local:StarColorConverter x:Key="StarColorConverter"/>
    </UserControl.Resources>
    <Canvas>
        <!-- Title -->
        <Label Content="Manage Reviews"
           FontSize="32"
           FontWeight="Bold"
           Foreground="#E0E1F1"
           FontFamily="Montserrat"
           Canvas.Left="330"
           Canvas.Top="16"/>
        
        <StackPanel Canvas.Left="35" Canvas.Top="100" Width="860">

            <!-- Reviews -->
            <Border Margin="0,0,0,15" CornerRadius="15" BorderThickness="1" BorderBrush="#9497CD"
                    Background="#1C1448" Padding="6">
                <ListView x:Name="lvReviews" Height="400" Background="Transparent" BorderBrush="Transparent" ScrollViewer.VerticalScrollBarVisibility="Disabled" >
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0,5"
                                    Padding="15"
                                    CornerRadius="10"
                                    Background="#241A5A">

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="180"/>
                                        <ColumnDefinition Width="430"/>
                                        <ColumnDefinition Width="130"/>
                                        <ColumnDefinition Width="60"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Client Name + Date -->
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding ClientId}"
                                                   FontSize="17"
                                                   FontWeight="Bold"
                                                   Foreground="#E0E1F1"/>
                                        <TextBlock Text="{Binding ReviewDate}"
                                                   FontSize="14"
                                                   Foreground="#B8B9E3"/>
                                    </StackPanel>

                                    <!-- Review Comment -->
                                    <TextBlock Grid.Column="1"
                                               Text="{Binding ReviewComment}"
                                               TextWrapping="Wrap"
                                               FontSize="14"
                                               Foreground="#D5CFF5"
                                               VerticalAlignment="Center"/>

                                    <!-- Rating Stars -->
                                    <StackPanel Grid.Column="2"
                                                Orientation="Horizontal"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center">

                                        <TextBlock Text="★" FontSize="20" Foreground="{Binding ReviewRating, Converter={StaticResource StarColorConverter},ConverterParameter=1}"/>
                                        <TextBlock Text="★" FontSize="20" Foreground="{Binding ReviewRating, Converter={StaticResource StarColorConverter},ConverterParameter=2}"/>
                                        <TextBlock Text="★" FontSize="20" Foreground="{Binding ReviewRating, Converter={StaticResource StarColorConverter},ConverterParameter=3}"/>
                                        <TextBlock Text="★" FontSize="20" Foreground="{Binding ReviewRating, Converter={StaticResource StarColorConverter},ConverterParameter=4}"/>
                                        <TextBlock Text="★" FontSize="20" Foreground="{Binding ReviewRating, Converter={StaticResource StarColorConverter},ConverterParameter=5}"/>
                                    </StackPanel>

                                    <!-- Delete Button -->
                                    <Button Grid.Column="3"
                                            Content="🗑️"
                                            FontSize="18"
                                            Background="Transparent"
                                            Foreground="DimGray"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>

                </ListView>
            </Border>

        </StackPanel>

    </Canvas>
</UserControl>
