<UserControl x:Class="PlateUpWinApp.Frames.ManageOrderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PlateUpWinApp.Frames"
             mc:Ignorable="d" 
             d:DesignHeight="540" d:DesignWidth="930">
    <Canvas Background="Transparent">

        <!-- Title -->
        <Label Content="Manage Orders"
                   FontSize="32"
                   FontWeight="Bold"
                   Foreground="#E0E1F1"
                   FontFamily="Montserrat"
                   Canvas.Left="350"
                   Canvas.Top="16"/>

        <!-- Search Box -->
        <Border Canvas.Left="50"
                Canvas.Top="80"
                Width="250"
                Height="35"
                CornerRadius="17"
                Background="#1C1448"
                BorderBrush="#9497CD"
                BorderThickness="1">
            <Grid>
                <TextBlock Text="🔍" 
                           FontSize="16"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           Margin="12,0,0,0"
                           Foreground="#9497CD"/>
                <TextBox x:Name="txtSearchOrder"
                         Background="Transparent"
                         Foreground="#E0E1F1"
                         BorderThickness="0"
                         FontSize="13"
                         VerticalContentAlignment="Center"
                         Padding="35,0,10,0">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Grid>
                                            <ScrollViewer x:Name="PART_ContentHost" />
                                            <!-- טקסט המים (Watermark) -->
                                            <TextBlock Text="Search Order ID"
                                               Foreground="#5F5E84"
                                               FontSize="13"
                                               VerticalAlignment="Center"
                                               Margin="35,0,10,0"
                                               IsHitTestVisible="False"
                                               Visibility="Collapsed"
                                               x:Name="watermarkLabel"/>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <!-- מציג את טקסט המים רק כשהתיבה ריקה -->
                                            <Trigger Property="Text" Value="">
                                                <Setter TargetName="watermarkLabel" Property="Visibility" Value="Visible" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Style>
                </TextBox>

            </Grid>
        </Border>

        <!-- Order Status Filter -->
        <TextBlock Text="Order Status"
                   Canvas.Left="50"
                   Canvas.Top="130"
                   FontSize="14"
                   Foreground="#D5CFF5"
                   FontWeight="SemiBold"/>

        <ComboBox x:Name="cmbOrderStatus"
                  Canvas.Left="50"
                  Canvas.Top="155"
                  Width="200"
                  Padding="10,6,0,6"
                  FontSize="13"
                  Background="#1C1448"
                  Foreground="Black"
                  BorderBrush="#9497CD"
                  BorderThickness="1">
            <ComboBoxItem Content="Select" IsSelected="True"/>
            <ComboBoxItem Content="Completed"/>
            <ComboBoxItem Content="Cancelled"/>
        </ComboBox>

        <!-- Order List -->
        <StackPanel Canvas.Left="320"
                    Canvas.Top="80"
                    Width="580">

            <!-- Order 1 -->
            <Border Margin="0,0,0,15"
                    CornerRadius="15"
                    BorderThickness="1"
                    BorderBrush="#9497CD"
                    Background="#1C1448"
                    Padding="20,15">
                <StackPanel Orientation="Horizontal">
                    
                    <!-- Left Side: Order Number -->
                    <TextBlock Text="#1"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="#E0E1F1"
                               VerticalAlignment="Center"
                               Width="60"/>
                    
                    <!-- Status Dropdown -->
                    <ComboBox x:Name="cmbStatus1"
                                  Width="150"
                                  Padding="10,6,0,6"
                                  FontSize="12"
                                  Background="#281269"
                                  BorderBrush="#9497CD"
                                  BorderThickness="1"                     
                                  VerticalAlignment="Center">
                            <ComboBoxItem Content="Current Status" IsSelected="True"/>
                            <ComboBoxItem Content="Completed"/>
                            <ComboBoxItem Content="Cancelled"/>
                    </ComboBox>

                    <!-- Total Price -->
                    <TextBlock Text="Total: [price]"
                               FontSize="14" VerticalAlignment="Center" Margin="40,0,0,0"
                               Foreground="#D5CFF5"/>
                    

                    <!-- Right Side: Action Buttons-->
                    <StackPanel Orientation="Vertical"
                                HorizontalAlignment="Right"
                                Margin="50,0,0,0">
                        
                        <!-- Update Status Button -->
                        <Button x:Name="btnUpdateStatus1"
                                Content="Update Status"
                                Width="110"
                                Height="30"
                                FontSize="12"
                                FontWeight="SemiBold"
                                Foreground="#E0E1F1"
                                Background="#7B68EE"
                                BorderThickness="0"
                                Cursor="Hand"
                                Margin="0,0,0,8">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="updatebtn" Background="{TemplateBinding Background}"
                                            CornerRadius="8"
                                            Padding="10,5">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="updatebtn" Property="Background" Value="#9D7FEA"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!-- View Details Button -->
                        <Button x:Name="btnViewDetails1"
                                Content="View Details"
                                Width="110"
                                Height="30"
                                FontSize="12"
                                FontWeight="SemiBold"
                                Foreground="#E0E1F1"
                                Background="#4FC3F7"
                                BorderThickness="0" 
                                Cursor="Hand">

                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border"
                                            Background="#4FC3F7"
                                            CornerRadius="5" Padding="10,5">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#29B6F6"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>

                    <!-- Delete Button (בצד) -->
                    <Button x:Name="btnDelete1"
                            Content="🗑️"
                            FontSize="20"
                            FontWeight="SemiBold"
                            Background="Transparent"
                            Foreground="DimGray"
                            BorderThickness="0"
                            Cursor="Hand"
                            VerticalAlignment="Center"
                            Margin="10,0,0,0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="5"
                                        Padding="10,5">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                </StackPanel>
            </Border>

        </StackPanel>

    </Canvas>

</UserControl>
