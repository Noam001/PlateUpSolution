<UserControl x:Class="PlateUpWinApp.Frames.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PlateUpWinApp.Frames"
             mc:Ignorable="d" 
             d:DesignHeight="370" d:DesignWidth="750">
    <Canvas>

        <!-- Title -->
        <Label
        Content="Login"
        Foreground="White"
        FontSize="24"
        FontWeight="Bold"
        Canvas.Left="340"
        Canvas.Top="60"/>

        <!-- Email -->
        <Label
        Content="Email"
        Foreground="LightGray"
        FontSize="12"
        Canvas.Left="275"
        Canvas.Top="120"/>

        <TextBox
        x:Name="txtBoxEmail"
        Width="180"
        Height="30"
        FontSize="13"
        Canvas.Left="280"
        Canvas.Top="140"/>

        <!-- Password -->
        <Label
        Content="Password"
        Foreground="LightGray"
        FontSize="12"
        Canvas.Left="275"
        Canvas.Top="185"/>

        <TextBox
        x:Name="txtBoxPass"
        Width="180"
        Height="30"
        FontSize="13"
        Canvas.Left="280"
        Canvas.Top="205"/>

        <!-- Button -->
        <Button
        Content="Login"
        Width="180"
        Height="34"
        FontSize="14"
        FontWeight="SemiBold"
        Background="#007ACC"
        Foreground="White"
        BorderThickness="0"
        Cursor="Hand"
        Canvas.Left="280"
        Canvas.Top="255"/>
    </Canvas>
</UserControl>
